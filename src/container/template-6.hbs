
<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="heder_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
		<div class="info">
			<h1 class="info_title">{{title}}</h1>
			<p class="info_description">{{description}}</p>
		</div>
	{{/with}}

	{{#with form}}
	<form class="form">

		<div class="form_input_list">
			{{#each inputs}}
				<input type="{{tupe}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button tupe="submit" class="form_button">{{button}}</button>
		<div class="form_inline"></div>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>


{{#with updates}}
	<div class="updates">
		<h1 class="updates_title">{{title}}</h1>
		{{#each list}}
		<div class="list">
			<span class="list_img"></span>
	
			<div class="updates_list">				
				<strong class="list_nickname">@{{nickname}}</strong>
				<p class="list_description">{{description}}</p>
			</div>
		</div>
		{{/each}}

		{{#with show_all}}
			<a href="{{url}}" class="show_all">{{text}}</a>
		{{/with}}
	</div>
{{/with}}


{{#with expirience}}
	<div class="expirience">
			<h1 class="expirience_title">{{title}}</h1>
			<div class="expirience_badge">{{badge}}</div>

		<div class="expirience_list">
			{{#each list}}
				<div class="card_list">
					<h2 class="list_name">{{name}}</h2>
					<p class="list_details">{{details}}</p>
				</div>
			{{/each}}
		</div>
	</div>
{{/with}}



<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{> nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>